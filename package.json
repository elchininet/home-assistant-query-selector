{
  "name": "home-assistant-query-selector",
  "version": "1.0.0",
  "description": "Easily query home-assistant DOM elements in an async way",
  "keywords": [
    "query-selector",
    "dom",
    "dom-query",
    "home-assistant",
    "home-assistant-frontend",
    "javascript-library",
    "library"
  ],
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "author": "ElChiniNet",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && rollup --config rollup.config.js --bundleConfigAsCjs",
    "test:copy": "cp test/index.js .hass/config/www/home-assistant-query-selector-tests.js",
    "start:ha": "docker run --rm -p8123:8123 -v ${PWD}/.hass/config:/config homeassistant/home-assistant:2023.11.1",
    "start:ha:win": "docker run --rm -p8123:8123 -v %cd%/.hass/config:/config homeassistant/home-assistant:2023.11.1",
    "demo": "yarn build && yarn test:copy && yarn start:ha",
    "demo:win": "yarn build && yarn test:copy && yarn start:ha:win"
  },
  "dependencies": {
    "shadow-dom-selector": "^1.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.4.1",
    "rollup-plugin-istanbul": "^5.0.0",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.4.5",
    "typescript": "^5.2.2"
  }
}
